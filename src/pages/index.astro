---
import Button from '../components/ui/Button.astro';
import Layout from '../layouts/Layout.astro';
import Tile from '../components/Tile.astro';

import config from '../config/default.json';
import { Image } from 'astro:assets';

import trackStartingLineBanner from '../images/trackStartingLineBanner.jpg';
import trackStartingLineSquare from '../images/trackStartingLineSquare.jpg';

import Jay from '../components/Jay.astro';
---
<Layout title="Track & Field Logistics - Make sure you are planning rather than panicking for your competitions">
	<main class="">
		<Image alt="The starting line of a track with a view of the fencing and trees beyond" src={trackStartingLineBanner} class="lg:hidden" loading="eager" />
		<div class="relative bg-gradient-to-b from-transparent to-[#00220075] px-4 lg:px-10 pb-6">
			<div class="max-w-[1200px] mx-auto relative z-30">
				<div class="flex flex-col gap-2 lg:gap-3 xl:gap-4 items-center text-center py-6 lg:py-8 xl:py-10 lg:pl-4 xl:pt-12 lg:items-start">
					<div class="font-normal text-primary text-xl md:text-2xl lg:text-3xl xl:text-4xl">Welcome to Track & Field Logistics</div>
					<div class="font-bold text-standard text-xl md:text-2xl">Your partner in perfect event and project execution</div>
				</div>
				<div class="lg:py-8 lg:border-light lg:px-4 lg:bg-[#ffffffcc] lg:rounded-md lg:shadow-lg">
					<div class="text-xl text-center lg:text-left mb-6 md:text-2xl">What we do to help <span class="text-theme-primary font-bold">you</span></div>
					<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-3 lg:gap-4 ">
						{config.tiles.map((t, i) => (
							<Tile dictionary={t} index={i}/>
						))}
					</div>
				</div>
				<Button className="mt-6 w-[80%] lg:w-80 mx-auto lg:mx-4" href={config.links.email}>Contact us</Button>
			</div>
			<div class="hidden lg:block"><Image alt="The starting line of a track with a view of the fencing and trees beyond" src={trackStartingLineSquare} class="absolute w-1/2 xl:w-1/3 h-full right-0 top-0 object-cover" loading="eager" /></div>
		</div>
		<div class="lg:px-10">
			<div class="flex flex-col lg:flex-row lg:gap-6 max-w-[1200px] mx-auto relative z-30 lg:py-2 lg:justify-between lg:items-center">
				<Jay buttonVariant='portfolio' className='py-6 px-4' />
			</div>
		</div>
	</main>
</Layout>
